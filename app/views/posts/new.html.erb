<%= form_with(model: @post, url: confirm_posts_path, local: true) do |form| %>
  <%# エラーメッセージの表示 %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post_title">
    <%= form.label :text %>
    <%= form.text_field :text %>
  </div>
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image%>
    <%= form.submit %>
  </div>
<% end %>
